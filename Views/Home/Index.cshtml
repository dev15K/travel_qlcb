@{
    ViewData["Title"] = "Home Page";
}
@model List<QLCB.Models.ViewModels.ChuyenBayViewModel> 
<style>
        body {
            padding-top: 4.5rem;
        }
        .flight-card {
            margin-bottom: 1.5rem;
        }
    </style>

<!-- Header / Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
    <div class="container">
        <a class="navbar-brand" href="#">Đặt Vé Máy Bay</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</nav>

<!-- Search Box -->
<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <form class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Điểm khởi hành</label>
                    <input type="text" class="form-control" placeholder="TP.HCM">
                </div>
                <div class="col-md-4">
                    <label class="form-label">Điểm đến</label>
                    <input type="text" class="form-control" placeholder="Hà Nội">
                </div>
                <div class="col-md-2">
                    <label class="form-label">Ngày đi</label>
                    <input type="date" class="form-control">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Tìm chuyến</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Flight List -->
<div class="container mt-5">
    <h4 class="mb-3">Danh sách chuyến bay</h4>

    @foreach (var cb in Model)
    {
        <div class="card mb-3">
            <div class="card-body row">
                <div class="col-md-4">
                    <h5>@cb.MaChuyenBay - @cb.TenChuyenBay</h5>
                    <p>@cb.TenSanBayDi → @cb.TenSanBayDen</p>
                </div>
                <div class="col-md-4">
                    <p>
                        <strong>Khởi hành:</strong> @cb.ThoiGianKhoiHanh
                    </p>
                    <p>
                        <strong>Đến nơi:</strong> @cb.ThoiGianDen
                    </p>
                </div>
                <div class="col-md-4 text-end">
                    <p>
                        <strong>Số ghế:</strong> @cb.SoGhe
                    </p>
                    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modal_@cb.MaChuyenBay">Đặt vé</button>
                </div>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="modal_@cb.MaChuyenBay" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Vé có thể đặt - @cb.MaChuyenBay</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        @if (cb.VeBays.Any())
                        {
                            <ul class="list-group">
                                @foreach (var ve in cb.VeBays)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span>
                                            Mã vé: @ve.MaVeBay - Giá: @string.Format("{0:N0}", ve.GiaVe)₫
                                            @if (!string.IsNullOrEmpty(ve.MaHanhKhach))
                                            {
                                                <span class="text-danger ms-2">(Đã có người đặt)</span>
                                            }
                                        </span>

                                        <button class="btn btn-primary btn-sm"
                                                @(!string.IsNullOrEmpty(ve.MaHanhKhach) ? "disabled" : "")>
                                            Đặt ngay
                                        </button>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p>Không còn vé trống.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

</div>

@section Scripts {
    <script>
    $(document).ready(function () {
        $('.btnDatVe').on('click', function () {
            const maChuyenBay = $(this).data('mcb');
            const veBays = $(this).data('ve');

            let html = '';
            if (veBays.length === 0) {
                html = '<tr><td colspan="4" class="text-center">Không có vé khả dụng.</td></tr>';
            } else {
                veBays.forEach(ve => {
                    html += `
                        <tr>
                            <td>${ve.maVeBay}</td>
                            <td>${new Date(ve.ngayDatVe).toLocaleDateString()}</td>
                            <td>${ve.giaVe.toLocaleString()}</td>
                            <td>
                              <button class="btn btn-primary btn-sm">Đặt ngay</button>                            
                            </td>
                        </tr>
                    `;
                });
            }

            $('#veBayContainer').html(html);
            $('#modalDatVe').modal('show');
        });
    });
</script>
}
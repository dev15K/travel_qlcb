@model IEnumerable<QLCB.Models.NhanVien>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HoTen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Luong)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Luong)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaNhanVien">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaNhanVien">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaNhanVien">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
